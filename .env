APP_NAME=clean-api
ENV=local
API_PREFIX=/v1
OPENAPI_TITLE=clean-api
OPENAPI_VERSION=1.0.0

# DB: use Postgres in production
DB_DSN=sqlite+aiosqlite:///./.local.sqlite

JWT_SECRET=change-me
JWT_ALGORITHM=HS256
JWT_AUDIENCE=clean-api
JWT_ISSUER=clean-api
JWT_EXPIRE_SECONDS=3600

ENABLE_TRACING=false
OTEL_EXPORTER_OTLP_ENDPOINT=
PROMETHEUS_PORT=9000

# Optional: override allowed CORS origins.
# Accepts JSON array, comma-separated string, a single origin, or "*".
CORS_ORIGINS_RAW=["*"]
